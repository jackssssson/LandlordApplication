<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daredevil.landlordcommunication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LandlordApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".views.main.InitialScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.CreateUser.CreateUserActivity" />
        <activity android:name=".views.tenant.LogInTenant" />
        <activity
            android:name=".views.landlord.LogInLandlordActivity"
            android:label="@string/title_activity_log_in_landlord"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".views.chat.ChatMainActivity" />
        <activity android:name=".views.chat.ChatLogInActivity" />
        <activity android:name=".views.landlord.LandlordLogInActivity" />
        <activity android:name=".views.tenant.TenantLogInActivity"></activity>
    </application>

</manifest>
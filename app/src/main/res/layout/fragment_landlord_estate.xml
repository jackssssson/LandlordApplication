<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.landlord.estate.LandlordEstateFragment"
    android:background="@mipmap/home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/estate_name"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="estate name"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColorHint="#ffff"/>

        <EditText
            android:id="@+id/price"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:hint="price"
            android:background="@drawable/rounded_edit_text"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="305dp"
            android:textSize="15sp"
            android:textColorHint="#ffff"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:hint="address"
            android:background="@drawable/rounded_edit_text"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="343dp"
            android:textSize="15sp"
            android:textColorHint="#ffff"/>

        <Button
            android:id="@+id/btn_user_estate"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            android:background="@mipmap/button_create"
            android:textSize="10sp"
            android:text="Create"
            android:textColor="@color/username12"
            />

    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.landlord.info.LandlordInfoFragment"
    android:background="@mipmap/home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant name:"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!-- text view user name-->
        <TextView
            android:id="@+id/user_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_info"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/email_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_info"
            android:text="Tenant email:"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="#ffff"/>

        <!-- text view user email-->
        <TextView
            android:id="@+id/user_email_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_info"
            android:layout_toEndOf="@id/email_info"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <LinearLayout
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/username12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:paddingLeft="25dp"
                android:textSize="16sp"
                android:textColor="@color/username12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="16sp"
                android:paddingLeft="21dp"
                android:textColor="@color/username12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:paddingLeft="24dp"
                android:textSize="16sp"
                android:textColor="@color/username12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:paddingLeft="21dp"
                android:textSize="16sp"
                android:textColor="@color/username12"/>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"

            >

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"
               >

            </RadioButton>


            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"/>

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"/>

            <RadioButton
                android:id="@+id/rb_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"/>

            <RadioButton
                android:id="@+id/rb_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text"/>

        </RadioGroup>

        <TextView
            android:id="@+id/rate_info_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_info"
            android:text="Tenant rating:"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--text view user rate info-->
        <TextView
            android:id="@+id/user_rate_info_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_info"
            android:layout_toRightOf="@+id/rate_info_tenant"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--button rate-->
        <Button
            android:id="@+id/btn_rate_info"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="240dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/button_create"
            android:text="Rate"
            android:textColor="@color/username12"
            />

        <EditText
            android:id="@+id/owed_info"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_edit_text"
            android:textAlignment="center"
            android:hint="owed"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColorHint="#ffff"
            android:textColor="#ffff"/>

        <!--btn owned-->

        <Button
            android:id="@+id/btn_owed"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="330dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/button_create"
            android:text="Owed"
            android:textColor="@color/username12"/>

        <!-- text view user owned-->


        <TextView
            android:id="@+id/due_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_info_tenant"
            android:text="Due date:"
            android:textStyle="italic"
            android:textSize="15sp"
            android:textColor="#ffff"/>

        <!--text view user due date-->

        <TextView
            android:id="@+id/user_due_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_info_tenant"
            android:layout_toRightOf="@+id/due_date_info"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/is_occupied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/due_date_info"
            android:text="Is occupied:"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!-- text view user is occupied-->

        <TextView
            android:id="@+id/user_is_occupied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/due_date_info"
            android:layout_toRightOf="@+id/is_occupied"
            android:textSize="15sp"
            android:textColor="#ffff"/>

        <!--edit text set due date-->

        <EditText
            android:id="@+id/user_set_due_date"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginTop="380dp"
            android:hint="set due date"
            android:textSize="15sp"
            android:background="@drawable/rounded_edit_text"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColorHint="#ffff"
            android:textColor="#ffff" />

        <!--button set-->

        <Button
            android:id="@+id/btn_set_info"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_marginTop="420dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/button_create"
            android:text="Set"
            android:textColor="@color/username12"/>

        <!--btn chat-->

        <Button
            android:id="@+id/btn_chat_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="530dp"
            android:text="Chat"
            android:textColor="@color/username12"/>

        <TextView
            android:id="@+id/owed_tenant_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/is_occupied"
            android:text="Owed:"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/user_owed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/is_occupied"
            android:layout_toRightOf="@id/owed_tenant_info"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>





    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.landlord.info.LandlordInfoFragment"
    android:background="@mipmap/home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant name:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>

        <TextView
            android:id="@+id/email_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_info"
            android:text="Tenant email:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>

        <EditText
            android:id="@+id/rate_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_info"
            android:text="Rate tenant"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:textColor="@color/username12"
            />

        <TextView
            android:id="@+id/rate_info_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_info"
            android:text="Tenant rating:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>

        <Button
            android:id="@+id/btn_rate_info"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/rate_info"
            android:layout_marginStart="150dp"
            android:background="@mipmap/button_create"
            android:text="Rate"
            />

        <TextView
            android:id="@+id/owned_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rate_info_tenant"
            android:text="Owned:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>

        <TextView
            android:id="@+id/due_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/owned_info"
            android:text="Due date:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>

        <TextView
            android:id="@+id/is_occupied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/due_date_info"
            android:text="Is occupied:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>

        <TextView
            android:id="@+id/set_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/due_date_info"
            android:text="Set due date:"
            android:textSize="22dp"
            android:textColor="@color/username12"/>



    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.tenant.info.TenantInfoFragment"
    android:background="@mipmap/home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landlord name:"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--tv user name-->
        <TextView
            android:id="@+id/user_name_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_tenant_info_landlord"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/email_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tenant_info_landlord"
            android:text="Landlord email:"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--tv user email-->
        <TextView
            android:id="@+id/user_email_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tenant_info_landlord"
            android:layout_toRightOf="@+id/email_tenant_info_landlord"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/rating_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_tenant_info_landlord"
            android:text="Landlord rating:"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--tv user rating-->
        <TextView
            android:id="@+id/user_rating_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_tenant_info_landlord"
            android:layout_toRightOf="@+id/rating_tenant_info_landlord"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/owed_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_tenant_info_landlord"
            android:text="Owed:"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--tv user owed-->
        <TextView
            android:id="@+id/user_owed_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rating_tenant_info_landlord"
            android:layout_toRightOf="@+id/owed_tenant_info_landlord"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <TextView
            android:id="@+id/due_date_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owed_tenant_info_landlord"
            android:text="Due date:"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--tv user due date-->
        <TextView
            android:id="@+id/user_due_date_tenant_info_landlord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/owed_tenant_info_landlord"
            android:layout_toRightOf="@+id/due_date_tenant_info_landlord"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#ffff"/>

        <!--et rate landlord-->

        <EditText
            android:id="@+id/rate_tenant_info_landlord"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_edit_text"
            android:textAlignment="center"
            android:layout_marginTop="200dp"
            android:hint="rate landlord"
            android:textSize="15sp"
            android:textColorHint="#ffff"
            android:layout_centerHorizontal="true"
            />

        <!--button rate-->

        <Button
            android:id="@+id/btn_tenant_info_rate"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_below="@id/rate_tenant_info_landlord"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/button_create"
            android:text="Rate"
            />

        <!--button chat-->

        <Button
            android:id="@+id/btn_tenant_info_chat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/rate_tenant_info_landlord"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:text="Chat"
            />

    </RelativeLayout>

</FrameLayout>
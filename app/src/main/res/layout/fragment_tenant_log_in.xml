<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home"
    tools:context=".views.tenant.TenantLogInFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_tenant_log_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view">

                <TextView
                    android:id="@+id/tv_name_tenant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <!--tv user name-->
                <TextView
                    android:id="@+id/user_name_log_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_name_tenant"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_email_tenant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_tenant"
                    android:text="Email:"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <!--tv user email-->
                <TextView
                    android:id="@+id/user_email_log_tenant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_name_tenant"
                    android:layout_toEndOf="@+id/tv_email_tenant"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_total_owed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_email_tenant"
                    android:text="Total owed:"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/user_total_owed_tenant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_email_tenant"
                    android:layout_toEndOf="@+id/tv_total_owed"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tv_rating_tenant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_total_owed"
                    android:text="Rating:"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <!--tv user rating-->

                <TextView
                    android:id="@+id/user_rating_log_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_total_owed_tenant"
                    android:layout_toEndOf="@+id/tv_rating_tenant"
                    android:textColor="#ffff"
                    android:textSize="16sp"
                    android:textStyle="italic" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dp"

                >

                <Button
                    android:id="@+id/btn_log_out_tenant"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/button_create"
                    android:text="LogOut"
                    android:textColor="@color/username12"
                    android:textSize="10dp" />


            </RelativeLayout>
        </RelativeLayout>
        <!--btn create estate-->

        <Button
            android:id="@+id/btn_create_estate_log_in"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/rl_tenant_log_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@mipmap/button_create"
            android:text="Rent"
            android:textColor="@color/username12"
            android:textSize="10sp" />

        <!--lv estate log in-->

        <ListView
            android:id="@+id/lv_estate_log_in"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_create_estate_log_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_edit_text">


        </ListView>


    </LinearLayout>

</FrameLayout>